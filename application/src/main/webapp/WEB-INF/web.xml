<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
            http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>MajekWMS</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <description>This application comes with simulator that shows WMS capabilities to support inventory management in
        warehouses.
    </description>
    <context-param>
        <description>The EMAIL address of the administrator to whom questions
            and comments about this application should be addressed.
        </description>
        <param-name>webmaster</param-name>
        <param-value>kornicameister@gmail.com</param-value>
    </context-param>

    <!-- servlet -->
    <servlet>
        <description>Middle man</description>
        <display-name>WMSDataAgent</display-name>
        <servlet-name>WMSDataAgent</servlet-name>
        <servlet-class>org.kornicameister.wms.server.servlet.WMSDataAgent</servlet-class>
        <init-param>
            <param-name>serverMethods</param-name>
            <param-value>src/main/resources/server_methods.properties</param-value>
        </init-param>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet>
        <description>Page controller</description>
        <display-name>WMSController</display-name>
        <servlet-name>WMSController</servlet-name>
        <servlet-class>org.kornicameister.wms.server.servlet.WMSController</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <description>Authorization agent</description>
        <display-name>WMSAuthAgent</display-name>
        <servlet-name>WMSAuthAgent</servlet-name>
        <servlet-class>org.kornicameister.wms.server.servlet.WMSAuthAgent</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- mappings -->
    <servlet-mapping>
        <servlet-name>WMSDataAgent</servlet-name>
        <url-pattern>/wms/agent/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WMSController</servlet-name>
        <url-pattern>/wms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WMSAuthAgent</servlet-name>
        <url-pattern>/wms/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WMSAuthAgent</servlet-name>
        <url-pattern>/wms/auth/logout</url-pattern>
    </servlet-mapping>
    <!--mappings-->

    <!--filters-->
    <!--filters-->

    <session-config>
        <session-timeout>120</session-timeout>
        <tracking-mode>URL</tracking-mode>
    </session-config>
</web-app>

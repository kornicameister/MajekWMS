<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.jboss.org/dtd/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="majekWMSFactory">
  <!-- some options -->
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">12345</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/majekwms</property>
  <property name="hibernate.connection.username">majekWMS</property>
  <property name="hibernate.default_schema">majekwms</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.dialect.cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
  <property name="hibernate.show_sql">true</property>
  <property name="hibernate.format_sql">true</property>
  <property name="hibernate.generate_statistics">true</property>
  <property name="hibernate.order_inserts">true</property>
  <property name="hibernate.order_updates">true</property>
  <!-- mapping -->
  <mapping class="wms.model.hibernate.AbstractEntity"/>
  <mapping class="wms.model.hibernate.AbstractStorageUnit"/>
  <mapping class="wms.model.hibernate.Client"/>
  <mapping class="wms.model.hibernate.Invoice"/>
  <mapping class="wms.model.hibernate.InvoiceProduct"/>
  <mapping class="wms.model.hibernate.InvoiceProductId"/>
  <mapping class="wms.model.hibernate.Measure"/>
  <mapping class="wms.model.hibernate.Product"/>
  <mapping class="wms.model.hibernate.Unit"/>
  <mapping class="wms.model.hibernate.Warehouse"/>
  <mapping class="wms.model.hibernate.WarehouseType"/>
  <!-- events -->
  <event type="auto-flush"/>
 </session-factory>
</hibernate-configuration>

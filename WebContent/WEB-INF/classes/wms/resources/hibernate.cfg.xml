<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="majekWMSFactory">
		<!-- some options -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">12345</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/majekwms</property>
		<property name="hibernate.connection.username">majekWMS</property>
		<property name="hibernate.default_schema">majekwms</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.dialect.cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.generate_statistics">true</property>
		<property name="hibernate.order_inserts">true</property>
		<property name="hibernate.order_updates">true</property>
		<!-- mapping -->
		<mapping class="wms.model.BaseEntity" />
		<mapping class="wms.model.Client" />
		<mapping class="wms.model.Invoice" />
		<mapping class="wms.model.Product" />
		<mapping class="wms.model.InvoiceProduct" />
		<mapping class="wms.model.InvoiceProductIdentifier" />
		<mapping class="wms.model.InvoiceType" />
		<mapping class="wms.model.Measure" />
		<mapping class="wms.model.Unit" />
		<mapping class="wms.model.UnitType" />
		<mapping class="wms.model.Warehouse" />
		<!-- events -->
		<event type="auto-flush" />
	</session-factory>
</hibernate-configuration>
